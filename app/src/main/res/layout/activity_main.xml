<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/ll_masukkan_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginRight="180dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_masukkan_pin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="< Masukkan PIN"
            android:fontFamily="@font/poppins_r"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cv_masukkan_pin"
        app:cardCornerRadius="28dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_masukkan_pin"
        >

        <LinearLayout
            android:id="@+id/ll_masukkan_6_digit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_masukkan_6_digit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_r"
                android:text="Masukkan 6 digit PIN Syariah Anda"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/ll_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                >
                <ImageView
                    android:id="@+id/iv_elipse_pin_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_elipse_pin"
                    android:layout_gravity="center"
                    />
                
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iv_elipse_pin_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_elipse_pin"
                    android:layout_gravity="center"

                    />

                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_elipse_pin_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_elipse_pin"
                    android:layout_gravity="center"
                    />
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_elipse_pin_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_elipse_pin"
                    android:layout_gravity="center"
                    />
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_elipse_pin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_elipse_pin"
                    android:layout_gravity="center"
                    />
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_elipse_pin_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_elipse_pin"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_pin"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background_keyboard"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_1_sampai_3"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="2"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="3"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_4_sampai_6"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="4"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="5"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="6"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_7_sampai_9"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="7"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="8"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="9"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:fontFamily="@font/poppins_r"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_x_sampai_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_rectangle"
                        android:backgroundTint="@color/off_button"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_off"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_rectangle"
                        android:backgroundTint="@color/background_keyboard"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_rectangle"
                            android:fontFamily="@font/poppins_r"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="24dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_rectangle"
                        android:backgroundTint="@color/next_button"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_right"
                            />
                    </FrameLayout>





                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>